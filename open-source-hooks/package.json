{
  "name": "open-source-hooks",
  "version": "1.4.0",
  "description": "Open source hooks for React",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "scripts": {
    "clean:prod": "rimraf lib && rimraf types",
    "build:dev": "tsc --project tsconfig.dev.json",
    "watch": "yarn clean:prod && nodemon -e ts --watch src --exec \"yarn build:dev\"",
    "build:prod": "yarn clean:prod && tsc --project tsconfig.prod.json",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "yarn format",
    "prepare": "yarn build:prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aslanluong/open-source-hooks"
  },
  "author": "aslanluong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aslanluong/open-source-hooks/issues"
  },
  "homepage": "https://github.com/aslanluong/open-source-hooks#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "autoprefixer": "^10.1.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
